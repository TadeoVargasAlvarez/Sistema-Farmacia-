@model FarmaciaSalacor.Web.Models.Transferencia
@{
    ViewData["Title"] = "Detalle de transferencia";
}

<div class="erp-page-header">
    <div class="erp-page-title">Transferencias &raquo; Detalle</div>
    <div class="erp-page-subtitle">@((Model.Documento ?? $"Transferencia #{Model.Id}"))</div>
</div>

<div class="erp-panel mb-2">
    <div class="erp-panel-header">Cabecera</div>
    <div class="erp-panel-body p-2">
        <div class="row g-2">
            <div class="col-md-3"><strong>Fecha:</strong> @Model.Fecha.ToString("yyyy-MM-dd HH:mm")</div>
            <div class="col-md-3"><strong>Documento:</strong> @(Model.Documento ?? "-")</div>
            <div class="col-md-3"><strong>Desde:</strong> @(Model.DesdeAlmacen?.Nombre ?? "-")</div>
            <div class="col-md-3"><strong>Hacia:</strong> @(Model.HaciaAlmacen?.Nombre ?? "-")</div>
        </div>
        <div class="row g-2 mt-1">
            <div class="col-md-6"><strong>Observaci√≥n:</strong> @(Model.Observacion ?? "-")</div>
            <div class="col-md-6"><strong>Usuario:</strong> @(Model.Usuario?.Username ?? "-")</div>
        </div>
    </div>
</div>

<div class="erp-panel">
    <div class="erp-panel-header">Detalle</div>
    <div class="erp-panel-body p-0">
        <table class="table table-sm table-striped table-hover mb-0 erp-table">
            <thead>
                <tr>
                    <th style="width:90px;">ID</th>
                    <th>Producto</th>
                    <th style="width:120px;" class="text-end">Cantidad</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model.Detalles)
                {
                    <tr>
                        <td>@d.Id</td>
                        <td>@(d.Producto?.Nombre ?? "-")</td>
                        <td class="text-end">@d.Cantidad.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
