@model List<FarmaciaSalacor.Web.Models.Venta>
@{
    ViewData["Title"] = "Historial de ventas";
    DateTime? desde = (DateTime?)ViewBag.Desde;
    DateTime? hasta = (DateTime?)ViewBag.Hasta;
}

<div class="erp-page-header">
    <div class="erp-page-title">Ventas &raquo; Historial</div>
    <div class="erp-page-subtitle">Últimas 200 ventas</div>
</div>

<div class="erp-panel mb-2">
    <div class="erp-panel-header">Filtros</div>
    <div class="erp-panel-body">
        <form method="get" class="row g-2">
            <div class="col-md-2">
                <label class="form-label form-label-sm">Desde</label>
                <input class="form-control form-control-sm" type="date" name="desde" value="@(desde?.ToString("yyyy-MM-dd") ?? "")" />
            </div>
            <div class="col-md-2">
                <label class="form-label form-label-sm">Hasta</label>
                <input class="form-control form-control-sm" type="date" name="hasta" value="@(hasta?.ToString("yyyy-MM-dd") ?? "")" />
            </div>
            <div class="col-md-8 d-flex align-items-end justify-content-end gap-2">
                <a class="btn btn-secondary btn-sm" asp-action="Historial">Limpiar</a>
                <button class="btn btn-primary btn-sm" type="submit">Aplicar</button>
            </div>
        </form>
    </div>
</div>

<div class="erp-panel">
    <div class="erp-toolbar">
        <a class="btn btn-success btn-sm" asp-action="Nueva"><i class="fa-solid fa-plus"></i> Nueva venta</a>
        <div class="ms-auto text-muted small align-self-center">Total: <strong>@Model.Count</strong></div>
    </div>
    <div class="erp-panel-body p-0">
        <table class="table table-sm table-striped table-hover mb-0 erp-table">
            <thead>
                <tr>
                    <th style="width:90px;">ID</th>
                    <th style="width:170px;">Fecha</th>
                    <th style="width:140px;">Documento</th>
                    <th>Cliente</th>
                    <th style="width:110px;" class="text-center">Tipo</th>
                    <th style="width:130px;" class="text-end">Total</th>
                    <th style="width:130px;" class="text-end">Saldo</th>
                    <th style="width:120px;"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr><td colspan="8" class="text-muted small p-2">No hay ventas.</td></tr>
                }
                else
                {
                    foreach (var v in Model)
                    {
                        <tr>
                            <td>@v.Id</td>
                            <td>@v.Fecha.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@(v.NumeroDocumento ?? "-")</td>
                            <td>@(v.Cliente?.Nombre ?? "Consumidor final")</td>
                            <td class="text-center">@(v.EsCredito ? "Crédito" : "Contado")</td>
                            <td class="text-end">@v.Total.ToString("N2")</td>
                            <td class="text-end">@((v.Total - v.Pagado).ToString("N2"))</td>
                            <td class="text-end">
                                <a class="btn btn-primary btn-sm" asp-action="Detalle" asp-route-id="@v.Id"><i class="fa-solid fa-eye"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

