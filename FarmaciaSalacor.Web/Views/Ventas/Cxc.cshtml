@model List<FarmaciaSalacor.Web.Models.Venta>
@{
    ViewData["Title"] = "Cuentas por cobrar";
}

<div class="erp-page-header">
    <div class="erp-page-title">Ventas &raquo; Cuentas por cobrar</div>
    <div class="erp-page-subtitle">Ventas a cr√©dito con saldo</div>
</div>

<div class="erp-panel">
    <div class="erp-toolbar">
        <div class="ms-auto text-muted small align-self-center">Total: <strong>@Model.Count</strong></div>
    </div>
    <div class="erp-panel-body p-0">
        <table class="table table-sm table-striped table-hover mb-0 erp-table">
            <thead>
                <tr>
                    <th style="width:90px;">ID</th>
                    <th style="width:170px;">Fecha</th>
                    <th style="width:140px;">Documento</th>
                    <th>Cliente</th>
                    <th style="width:130px;" class="text-end">Total</th>
                    <th style="width:130px;" class="text-end">Pagado</th>
                    <th style="width:130px;" class="text-end">Saldo</th>
                    <th style="width:120px;"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr><td colspan="8" class="text-muted small p-2">No hay cuentas por cobrar.</td></tr>
                }
                else
                {
                    foreach (var v in Model)
                    {
                        <tr>
                            <td>@v.Id</td>
                            <td>@v.Fecha.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@(v.NumeroDocumento ?? "-")</td>
                            <td>@(v.Cliente?.Nombre ?? "-")</td>
                            <td class="text-end">@v.Total.ToString("N2")</td>
                            <td class="text-end">@v.Pagado.ToString("N2")</td>
                            <td class="text-end">@((v.Total - v.Pagado).ToString("N2"))</td>
                            <td class="text-end">
                                <a class="btn btn-primary btn-sm" asp-action="Abonar" asp-route-id="@v.Id"><i class="fa-solid fa-coins"></i></a>
                                <a class="btn btn-secondary btn-sm" asp-action="Detalle" asp-route-id="@v.Id"><i class="fa-solid fa-eye"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

