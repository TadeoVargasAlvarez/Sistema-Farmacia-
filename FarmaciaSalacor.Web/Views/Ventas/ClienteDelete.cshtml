@model FarmaciaSalacor.Web.Models.Cliente
@{
    ViewData["Title"] = "Eliminar cliente";
}

<div class="erp-page-header">
    <div class="erp-page-title">Ventas &raquo; Clientes &raquo; Eliminar</div>
</div>

<div class="erp-panel">
    <div class="erp-panel-header">Confirmación</div>
    <div class="erp-panel-body">
        <div class="alert alert-warning p-2 mb-2">¿Seguro que deseas eliminar este cliente?</div>
        <table class="table table-sm mb-2">
            <tr><th style="width:160px;">ID</th><td>@Model.Id</td></tr>
            <tr><th>Nombre</th><td>@Model.Nombre</td></tr>
            <tr><th>Documento</th><td>@(Model.Documento ?? "-")</td></tr>
        </table>

        <form asp-action="ClienteDeleteConfirmed" method="post" class="d-flex justify-content-end gap-2">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <a class="btn btn-secondary btn-sm" asp-action="Clientes">Cancelar</a>
            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
        </form>
    </div>
</div>
