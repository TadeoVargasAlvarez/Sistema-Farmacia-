@model List<FarmaciaSalacor.Web.Models.Venta>
@{
    ViewData["Title"] = "Reporte de ventas";
    DateTime? desde = (DateTime?)ViewBag.Desde;
    DateTime? hasta = (DateTime?)ViewBag.Hasta;
    var total = (decimal)(ViewBag.Total ?? 0m);
}

<div class="erp-page-header">
    <div class="erp-page-title">Reportes &raquo; Ventas</div>
    <div class="erp-page-subtitle">Total: @total.ToString("N2")</div>
</div>

<div class="erp-panel mb-2">
    <div class="erp-panel-header">Filtro</div>
    <div class="erp-panel-body">
        <form method="get" class="row g-2">
            <div class="col-md-2">
                <label class="form-label form-label-sm">Desde</label>
                <input class="form-control form-control-sm" type="date" name="desde" value="@(desde?.ToString("yyyy-MM-dd") ?? "")" />
            </div>
            <div class="col-md-2">
                <label class="form-label form-label-sm">Hasta</label>
                <input class="form-control form-control-sm" type="date" name="hasta" value="@(hasta?.ToString("yyyy-MM-dd") ?? "")" />
            </div>
            <div class="col-md-8 d-flex align-items-end justify-content-end gap-2">
                <a class="btn btn-secondary btn-sm" asp-action="Ventas">Limpiar</a>
                <button class="btn btn-primary btn-sm" type="submit">Aplicar</button>
            </div>
        </form>
    </div>
</div>

<div class="erp-panel">
    <div class="erp-toolbar">
        <div class="ms-auto text-muted small align-self-center">Registros: <strong>@Model.Count</strong></div>
    </div>
    <div class="erp-panel-body p-0">
        <table class="table table-sm table-striped table-hover mb-0 erp-table">
            <thead>
                <tr>
                    <th style="width: 160px;">Fecha</th>
                    <th style="width: 130px;">Documento</th>
                    <th>Cliente</th>
                    <th style="width: 90px;">Tipo</th>
                    <th style="width: 120px;" class="text-end">Total</th>
                    <th style="width: 40px;"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr><td colspan="6" class="text-muted small p-2">Sin resultados.</td></tr>
                }
                else
                {
                    foreach (var v in Model)
                    {
                        <tr>
                            <td>@v.Fecha.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@(v.NumeroDocumento ?? "-")</td>
                            <td>@(v.Cliente?.Nombre ?? "-")</td>
                            <td>@(v.EsCredito ? "Cr√©dito" : "Contado")</td>
                            <td class="text-end">@v.Total.ToString("N2")</td>
                            <td class="text-end">
                                <a class="btn btn-primary btn-sm" asp-controller="Ventas" asp-action="Detalle" asp-route-id="@v.Id"><i class="fa-solid fa-eye"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
