@model List<FarmaciaSalacor.Web.Models.Producto>
@{
    ViewData["Title"] = "Stock bajo";
    var umbral = (decimal)(ViewBag.Umbral ?? 0m);
}

<div class="erp-page-header">
    <div class="erp-page-title">Reportes &raquo; Stock bajo</div>
    <div class="erp-page-subtitle">Productos con stock <= @umbral</div>
</div>

<div class="erp-panel mb-2">
    <div class="erp-panel-header">Filtro</div>
    <div class="erp-panel-body">
        <form method="get" class="row g-2">
            <div class="col-md-2">
                <label class="form-label form-label-sm">Umbral</label>
                <input class="form-control form-control-sm" type="number" step="0.01" name="umbral" value="@umbral" />
            </div>
            <div class="col-md-10 d-flex align-items-end justify-content-end gap-2">
                <a class="btn btn-secondary btn-sm" asp-action="StockBajo">0</a>
                <button class="btn btn-primary btn-sm" type="submit">Aplicar</button>
            </div>
        </form>
    </div>
</div>

<div class="erp-panel">
    <div class="erp-toolbar">
        <div class="ms-auto text-muted small align-self-center">Total: <strong>@Model.Count</strong></div>
    </div>
    <div class="erp-panel-body p-0">
        <table class="table table-sm table-striped table-hover mb-0 erp-table">
            <thead>
                <tr>
                    <th style="width: 90px;">ID</th>
                    <th style="width: 130px;">CÃ³digo</th>
                    <th>Producto</th>
                    <th style="width: 110px;" class="text-end">Stock</th>
                    <th style="width: 40px;"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr><td colspan="5" class="text-muted small p-2">Sin resultados.</td></tr>
                }
                else
                {
                    foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.Id</td>
                            <td>@p.Codigo</td>
                            <td>@p.Nombre</td>
                            <td class="text-end">@p.Stock.ToString("N2")</td>
                            <td class="text-end">
                                <a class="btn btn-primary btn-sm" asp-area="Inventarios" asp-controller="Productos" asp-action="Edit" asp-route-id="@p.Id"><i class="fa-solid fa-pen"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
