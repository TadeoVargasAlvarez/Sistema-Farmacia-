@model FarmaciaSalacor.Web.ViewModels.UsuarioResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="erp-page-header">
    <div class="erp-page-title">Configuración &raquo; Usuarios &raquo; Reset password</div>
    <div class="erp-page-subtitle">@Model.Username</div>
</div>

<div class="erp-panel">
    <div class="erp-panel-header">Nueva contraseña</div>
    <div class="erp-panel-body">
        <form asp-action="UsuarioResetPassword" method="post" class="row g-2">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Username" />

            <div class="col-md-4">
                <label asp-for="NewPassword" class="form-label form-label-sm">Contraseña</label>
                <input asp-for="NewPassword" class="form-control form-control-sm" />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="ConfirmPassword" class="form-label form-label-sm">Confirmar</label>
                <input asp-for="ConfirmPassword" class="form-control form-control-sm" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
            <div class="col-12">
                <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            </div>

            <div class="col-12 mt-2 d-flex justify-content-end gap-2">
                <a class="btn btn-secondary btn-sm" asp-action="Usuarios">Cancelar</a>
                <button type="submit" class="btn btn-primary btn-sm">Guardar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
