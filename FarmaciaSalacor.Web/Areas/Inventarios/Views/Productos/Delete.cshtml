@model FarmaciaSalacor.Web.Models.Producto
@{
    ViewData["Title"] = "Eliminar producto";
}

<div class="erp-page-header">
    <div class="erp-page-title">Inventarios &raquo; Productos &raquo; Eliminar</div>
</div>

<div class="erp-panel">
    <div class="erp-panel-header">Confirmación</div>
    <div class="erp-panel-body">
        <div class="alert alert-warning p-2 mb-2">
            ¿Seguro que deseas eliminar este producto?
        </div>

        <table class="table table-sm mb-2">
            <tr><th style="width:160px;">Código</th><td>@Model.Codigo</td></tr>
            <tr><th>Producto</th><td>@Model.Nombre</td></tr>
            <tr><th>Categoría</th><td>@(Model.Categoria?.Nombre ?? "-")</td></tr>
            <tr><th>Marca</th><td>@(Model.Marca?.Nombre ?? "-")</td></tr>
        </table>

        <form asp-action="DeleteConfirmed" method="post" class="d-flex justify-content-end gap-2">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <a class="btn btn-secondary btn-sm" asp-action="Index">Cancelar</a>
            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
        </form>
    </div>
</div>
