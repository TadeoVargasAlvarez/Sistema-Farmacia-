@model FarmaciaSalacor.Web.Models.Producto
@{
    ViewData["Title"] = "Eliminar producto";
}

<div class="erp-page-header">
    <div class="erp-page-title">Inventarios &raquo; Productos &raquo; Eliminar</div>
</div>

<div class="erp-panel">
    <div class="erp-panel-header">Confirmación</div>
    <div class="erp-panel-body">
        <div class="alert alert-warning p-2 mb-2">
            ¿Seguro que deseas eliminar este producto?
        </div>

        <table class="table table-sm mb-2">
            <tr><th style="width:160px;">Código</th><td>@Model.Codigo</td></tr>
            <tr><th>Nombre comercial</th><td>@Model.Nombre</td></tr>
            <tr><th>Nombre genérico</th><td>@(string.IsNullOrWhiteSpace(Model.NombreGenerico) ? "-" : Model.NombreGenerico)</td></tr>
            <tr><th>Forma farmacéutica</th><td>@(string.IsNullOrWhiteSpace(Model.FormaFarmaceutica) ? "-" : Model.FormaFarmaceutica)</td></tr>
            <tr><th>Concentración</th><td>@(string.IsNullOrWhiteSpace(Model.Concentracion) ? "-" : Model.Concentracion)</td></tr>
            <tr><th>Presentación</th><td>@(string.IsNullOrWhiteSpace(Model.Presentacion) ? "-" : Model.Presentacion)</td></tr>
            <tr><th>Acción terapéutica</th><td>@(Model.Categoria?.Nombre ?? "-")</td></tr>
            <tr><th>Laboratorio</th><td>@(Model.Marca?.Nombre ?? "-")</td></tr>
        </table>

        <form asp-action="DeleteConfirmed" method="post" class="d-flex justify-content-end gap-2">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <a class="btn btn-secondary btn-sm" asp-action="Index">Cancelar</a>
            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
        </form>
    </div>
</div>
