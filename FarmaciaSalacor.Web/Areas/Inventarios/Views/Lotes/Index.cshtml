@model List<FarmaciaSalacor.Web.Models.Lote>
@{
    ViewData["Title"] = "Lotes";
}

<div class="erp-page-header">
    <div class="erp-page-title">Inventarios &raquo; Lotes</div>
    <div class="erp-page-subtitle">Control por lote / vencimiento</div>
</div>

<div class="erp-panel">
    <div class="erp-toolbar">
        <a class="btn btn-success btn-sm" asp-action="Create"><i class="fa-solid fa-plus"></i> Nuevo</a>
        <div class="ms-auto text-muted small align-self-center">Total: <strong>@Model.Count</strong></div>
    </div>
    <div class="erp-panel-body p-0">
        <table class="table table-sm table-striped table-hover mb-0 erp-table">
            <thead>
                <tr>
                    <th style="width:90px;">ID</th>
                    <th>Producto</th>
                    <th style="width:180px;">Nº Lote</th>
                    <th style="width:140px;">Vencimiento</th>
                    <th style="width:120px;" class="text-end">Stock</th>
                    <th style="width:90px;" class="text-center">Activo</th>
                    <th style="width:160px;"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr><td colspan="7" class="text-muted small p-2">No hay lotes.</td></tr>
                }
                else
                {
                    foreach (var l in Model)
                    {
                        <tr>
                            <td>@l.Id</td>
                            <td>@(l.Producto?.Nombre ?? "-")</td>
                            <td>@l.NumeroLote</td>
                            <td>@(l.Vencimiento?.ToString("yyyy-MM-dd") ?? "-")</td>
                            <td class="text-end">@l.Stock.ToString("N2")</td>
                            <td class="text-center">@(l.Activo ? "Sí" : "No")</td>
                            <td class="text-end">
                                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@l.Id"><i class="fa-solid fa-pen"></i></a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@l.Id"><i class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
