@model FarmaciaSalacor.Web.Models.Lote
@{
    ViewData["Title"] = "Eliminar lote";
}

<div class="erp-page-header">
    <div class="erp-page-title">Inventarios &raquo; Lotes &raquo; Eliminar</div>
</div>

<div class="erp-panel">
    <div class="erp-panel-header">Confirmación</div>
    <div class="erp-panel-body">
        <div class="alert alert-warning p-2 mb-2">¿Seguro que deseas eliminar este lote?</div>
        <table class="table table-sm mb-2">
            <tr><th style="width:160px;">ID</th><td>@Model.Id</td></tr>
            <tr><th>Producto</th><td>@(Model.Producto?.Nombre ?? "-")</td></tr>
            <tr><th>Nº Lote</th><td>@Model.NumeroLote</td></tr>
            <tr><th>Vencimiento</th><td>@(Model.Vencimiento?.ToString("yyyy-MM-dd") ?? "-")</td></tr>
            <tr><th class="text-end">Stock</th><td class="text-end">@Model.Stock.ToString("N2")</td></tr>
        </table>

        <form asp-action="DeleteConfirmed" method="post" class="d-flex justify-content-end gap-2">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <a class="btn btn-secondary btn-sm" asp-action="Index">Cancelar</a>
            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
        </form>
    </div>
</div>
